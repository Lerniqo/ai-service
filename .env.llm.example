# LLM Module Environment Variables
# Add these to your .env.development or .env.production file

# ============================================================================
# Google Gemini API Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# LLM Model Settings
# ============================================================================
# Model options: gemini-1.5-flash, gemini-1.5-pro, gemini-pro
LLM_MODEL=gemini-1.5-flash
# Temperature controls randomness (0.0 = deterministic, 2.0 = very random)
LLM_TEMPERATURE=0.7
# Maximum tokens in the response
LLM_MAX_TOKENS=2000

# ============================================================================
# Embedding Configuration
# ============================================================================
# Model for generating embeddings
# Options: models/embedding-001, models/text-embedding-004
EMBEDDING_MODEL=models/embedding-001
# Size of text chunks for embedding (in characters)
EMBEDDING_CHUNK_SIZE=1000
# Overlap between chunks (in characters)
EMBEDDING_CHUNK_OVERLAP=200

# ============================================================================
# Vector Store Configuration
# ============================================================================
# Type of vector store: chroma or faiss
VECTOR_STORE_TYPE=chroma
# Path to store vector database (relative or absolute)
VECTOR_STORE_PATH=./data/vector_store
# Collection name for storing vectors
VECTOR_STORE_COLLECTION=learning_content

# ============================================================================
# RAG Configuration
# ============================================================================
# Number of top relevant documents to retrieve
RAG_TOP_K=5
# Minimum similarity score threshold (0.0 to 1.0)
RAG_SCORE_THRESHOLD=0.7
